{
  "manifest_version": 3,
  "name": "airtable-hint-gpt-debug",
  "version": "1.1.1",
  "description": "Debug  version  GPT hints for Airtable formula field",
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://airtable.com/*"],
      "js": ["src/pages/content/index.js"],
      "css": ["assets/css/contentStyle.chunk.css"]
    }
  ],
  "devtools_page": "src/pages/devtools/index.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/js/*.js",
        "assets/css/*.css",
        "src/pages/extension/index.js",
        "icon-128.png",
        "icon-34.png"
      ],
      "matches": ["*://*/*"]
    }
  ],
  "permissions": ["activeTab", "tabs", "storage"]
}
